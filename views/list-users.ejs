<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>List Users</h1>
    <table>
        <thead>
            <tr>
                <th>Fullname</th>
                <th>Email</th>
                <th>Avatar</th>
                <th>Gallery</th>
                <th>#</th>
            </tr>
        </thead>
        <%if(users.length > 0){%>
            <%users.forEach(user => {%>
                <tr>
                    <td><%=user.fullname%></td>
                    <td><%=user.email%></td>
                    <td>
                        <img src="/users/<%=user.avatar%>" width="100px" height="100px">
                    </td>
                    <td>
                        <%if(user.gallery && user.gallery.length > 0){%>
                            <%user.gallery.forEach(galleryInfo => {%>
                                <img src="/users/<%=galleryInfo.name%>" width="100px" height="100px">
                            <%})%>
                        <%}%>
                    </td>
                    <td>
                        <a href="/admin/remove-user/<%=user.email%>">
                            <button>Remove</button>
                        </a>
                    </td>
                </tr>
            <%})%>
        <%}%>
    </table>

    <hr><hr>

    <form action="/admin/add-user" method="POST" enctype="multipart/form-data">
        <input type="text" placeholder="fullname" name="fullname"><br>
        <input type="text" placeholder="email" name="email"><br>
        <input type="file" name="avatar"><br>
        <button type="submit">ADD USER</button>
    </form>

    <hr>
    <form action="/admin/add-user-multi-image" method="POST" enctype="multipart/form-data">
        <input type="text" placeholder="fullname" name="fullname"><br>
        <input type="text" placeholder="email" name="email"><br>
        <input type="file" name="avatar"><br>
        <input type="file" name="gallery" multiple><br>
        <button type="submit">ADD USER</button>
    </form>
</body>
</html>